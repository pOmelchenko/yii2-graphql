{
    "name":"pomelchenko/yii2-graphql",
    "description":"facebook graphql server side for yii2 php framework",
    "keywords": ["yii2", "graphql"],
    "type":"yii2-extension",
    "license": "BSD-3-Clause",
    "authors":[
        {
          "name":"Pavel Omelchenko",
          "email":"p.Omelchenko@gmail.com"
        },
        {
            "name":"QingShan li",
            "email":"21997272@qq.com"
        }
    ],
    "minimum-stability":"dev",
    "prefer-stable": true,
    "require":{
        "php": ">=7.4.0",
        "ecodev/graphql-upload": "^6",
        "laminas/laminas-diactoros": "^2.17",
        "webonyx/graphql-php": "^14",
        "yiisoft/yii2": "~2.0.10"
    },
    "require-dev":{
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.10",
        "yidas/yii2-composer-bower-skip": "^2.0"
    },
    "autoload":{
        "psr-4":{
            "yii\\graphql\\":"src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yiiunit\\extensions\\graphql\\": "tests"
        }
    },
    "scripts": {
        "lint": "php ./vendor/bin/phpcs --standard=phpcs.xml.dist",
        "test": "php -d xdebug.mode=off ./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-text"
    },
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "extra": {
        "yii\\composer\\bower-skip": true
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "yidas/yii2-composer-bower-skip": true
        }
    }
}
